<resources xmlns:tools="http://schemas.android.com/tools">




    <!-- Base application theme. -->
    <style name="Theme.Shrine" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:buttonStyle">@style/CKButton</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/CKButton</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>

    </style>



    <style name="CKButton" parent="android:Widget.Material.Button.Colored">
        <item name="colorControlHighlight">?attr/colorAccent</item>
    </style>




    <style name="Widget.Shrine.Backdrop" parent="">
        <item name="android:background">?attr/colorAccent</item>
    </style>

    <style name="Theme.Shrine.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Shrine.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Shrine.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
